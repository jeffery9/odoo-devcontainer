    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },


        {
            "name": "Python: run Odoo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/odoo-bin",
            "args": ["-c","/etc/odoo/odoo.conf"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Odoo shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/odoo-bin",
            "args": ["shell", "-c","/etc/odoo/odoo.conf","-d","test"],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Python: upgrade app",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/odoo-bin",
            "args": ["-c","/etc/odoo/odoo.conf","-u","library","-d","test","--stop-after-init"],
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "Python: install app",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/odoo-bin",
            "args": ["-c","/etc/odoo/odoo.conf","-i","library","-d","test","--stop-after-init"],
            "console": "integratedTerminal",
            "justMyCode": true
        },

    ]
}